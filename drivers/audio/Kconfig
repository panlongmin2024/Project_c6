config AUDIO_IN_SPDIFRX_SUPPORT
	bool
	prompt "enable spdif rx in or not"
	default y
	depends on AUDIO_IN_ACTS
	help
	audio enable spdif in or not.

config AUDIO_PA_ACTS
	bool
	prompt "Actions SoC audio pa driver"
	default n
	help
	Device driver for Actions SoC audio pa

config AUDIO_PA_ACTS_DEV_NAME
	string "Device Name for Actions SoC audio pa"
	default "audio_pa"
	depends on AUDIO_PA_ACTS
	help
	  This is the device name for audio pa, and is included in the
	  device struct.

config AUDIO_OUT_ACTS_L_MUTE
	bool
	prompt "Mute left channel output"
	default n
	depends on AUDIO_PA_ACTS
	help
	Mute left channel for Actions SoC audio out or not.

config AUDIO_OUT_ACTS_R_MUTE
	bool
	prompt "Mute right channel output"
	default n
	depends on AUDIO_PA_ACTS
	help
	Mute right channel for Actions SoC audio out or not.

config AUDIO_OUT_AA_SOURCE_SEL
	int "Audio A-A channel source selection"
	default 1
	range 1 6
	depends on AUDIO_OUT_ACTS
	help
	Select the audio out Analog to Analog channel source as belown:
		- 1: AA_SOURCE_AUX0
		- 2: AA_SOURCE_AUX1
		- 3: AA_SOURCE_AUX2
		- 4: AA_SOURCE_AUXFD
		- 5: AA_SOURCE_ASEMIC
		- 6: AA_SOURCE_AFDMIC

config AUDIO_PA_SWING
	int "Set audio pa swing"
	depends on AUDIO_PA_ACTS
	help
	Set audio pa swing.

config AUDIO_OUT_DD_MODE
	int "Set audio out direct mode"
	depends on AUDIO_PA_ACTS
	help
	Set audio out direct mode.

config AUDIO_OUT_SE_DF
	int "Set audio out single end or differential mode"
	depends on AUDIO_PA_ACTS
	help
	Set audio out single end or differential mode.

config AUDIO_OUT_BIAS_MODE
	int "Set audio out dac bias mode"
	depends on AUDIO_PA_ACTS
	help
	Set audio out dac bias mode for performance or power.

config AUDIO_POWERON_OPEN_PA
	bool
	prompt "open PA when power on"
	default y
	depends on AUDIO_PA_ACTS
	help
	Open PA when power on or not.

config BOARD_EXTERNAL_PA_ENABLE
	bool
	prompt "enable external pa or not"
	default y
	depends on AUDIO_PA_ACTS
	help
	Enable external pa or not.

config EXTERN_PA_CLASS
	int "Set external pa class mode"
	depends on BOARD_EXTERNAL_PA_ENABLE
	default 0
	help
	Set extern pa class mode, 0 for classAB, other value for classD.

config AUDIO_SOFT_ANTIPOP_ENABLE
	bool
	prompt "enable soft antipop or not"
	default n
	depends on AUDIO_PA_ACTS
	help
	Enable soft antipop or not.

config AUDIO_ASRC_ACTS_DEV_NAME
	string "Device Name for Actions SoC audio asrc"
	default "audio_asrc"
	help
	  This is the device name for audio asrc, and is included in the
	  device struct.

config AUDIO_VOLUME_PA
	bool
	prompt "Use PA value as the Volume UNIT"
	default n
	depends on AUDIO_PA_ACTS
	help
		Use PA value as the Volume UNIT

source "drivers/audio/andes/shell/Kconfig"

