	bool
	prompt "support music dae"
	depends on ACTIONS_ALGORITHMS_LIBRARY
	default n
	help
	This option enables the music dae.

config MUSIC_DAE_FADE
	bool
	prompt "support music dae fade in/out"
	depends on MUSIC_DAE
	default n
