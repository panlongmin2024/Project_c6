menuconfig POWER
	bool
	prompt "Power"
	#select POWER_MANAGER
	default n
	help
	This option enables actions power 
	
config POWER_MANAGER
	bool
	prompt "power manager"
	depends on POWER
	default n
	help
	This option enables actions power manager.

config POWER_SMART_CONTROL
	bool
	prompt "power smart control"
	depends on POWER_MANAGER
	default n
	help
	This option enables power smart control.
