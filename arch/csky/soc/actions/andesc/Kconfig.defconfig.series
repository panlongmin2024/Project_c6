config ADC_ACTS
	def_bool y

endif # ADC

if GPIO

config GPIO_ACTS
	def_bool y

endif # GPIO

if I2C

config I2C_ACTS
	def_bool y

endif # I2C

if PWM

config PWM_ACTS
	def_bool y

endif # PWM

config SPI
	def_bool n

if SPI

config SPI_ACTS
	def_bool y

config SPI_1_ACTS_DELAY_CHAIN
	default 6

endif # SPI

if XSPI_NOR_ACTS

config XSPI_NOR_ACTS_DELAY_CHAIN
	default 6

endif # XSPI_NOR_ACTS

if SERIAL

config UART_ACTS
	def_bool y

endif # SERIAL

if MMC_0

config MMC_0_DATA_REG_WIDTH
	default 4

endif # MMC_0

if MMC_1

config MMC_1_DATA_REG_WIDTH
	default 4

endif # MMC_1

source "arch/csky/soc/actions/andesc/Kconfig.defconfig.ats*"

