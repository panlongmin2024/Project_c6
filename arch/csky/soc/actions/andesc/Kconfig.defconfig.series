if SOC_SERIES_ANDESC

config SOC_SERIES
	default andesc

config GEN_ISR_TABLES
	default y

config GEN_IRQ_VECTOR_TABLE
	default n

config ISR_STACK_SIZE
	default 1024

config IDLE_STACK_SIZE
	default 512

config EXTRA_EXCEPTION_INFO
	bool
	default y

config SRAM_BASE_ADDRESS
	hex
	default 0x40000

config SRAM_SIZE
